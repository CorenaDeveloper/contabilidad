                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnGuardarNatural">Guardar</button>
            </div>
        </div>
    </div>
</div>
<input type="hidden" name="name" value=""  id="txtIdProveedor"/>
<script src="~/assets/js/plugins/datatables.bootstrap5.min.js"></script>
<script>
    var listaProveedores;
    $(document).ready(function () {

        listaProveedores = $('#tabla-proveedores').DataTable({
            ajax: {
                url: '/Auxiliares/ListarProveedores',
                type: 'GET',
                dataSrc: ''
            },
            columns: [
                { data: 'idProveedor',
                  visible: false
                },
                { data: 'nombres' },
                { data: 'apellidos' },
                { data: 'nombreRazonSocial' },
                { data: 'celular' },
                { data: 'nrc' },
                {
                    data: null,
                    render: function (data) {
                        return `${data.nitProveedor}
                            <div class="prod-action-links">
                                                <ul class="list-inline me-auto mb-0">
                                                  <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="View">
                                                    <a
                                                      href="#" onclick="verDetalle('${data.idProveedor}')"
                                                      class="avtar avtar-xs btn-link-secondary btn-pc-default"
                                                      data-bs-toggle="offcanvas"
                                                      data-bs-target="#productOffcanvas"
                                                    >
                                                      <i class="ti ti-eye f-18"></i>
                                                    </a>
                                                  </li>
                                                  <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Edit">
                                                      <a href="#" onclick="editarProveedor('${data.idProveedor}')"
                                                      class="avtar avtar-xs btn-link-success btn-pc-default">
                                                      <i class="ti ti-edit-circle f-18"></i>
                                                    </a>
                                                  </li>
                                                  <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Delete">
                                                        <a href="#" onclick="eliminarProveedor('${data.idProveedor}')"
                                                        class="avtar avtar-xs btn-link-danger btn-pc-default">
                                                      <i class="ti ti-trash f-18"></i>
                                                    </a>
                                                  </li>
                                                </ul>
                                              </div>
                        ` 
                    }
                }
            ],
            responsive: true,
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json'
            }
        });
    });

    function verDetalle(id) {
        const proveedor = listaProveedores.rows().data().toArray().find(p => p.idProveedor == id);

        if (proveedor) {
            // Construir el contenido para mostrar en el modal
            const contenido = `
                <p><strong>Nombres:</strong> ${proveedor.nombres || 'N/A'}</p>
                <p><strong>Apellidos:</strong> ${proveedor.apellidos || 'N/A'}</p>
                <p><strong>¿Es Persona Jurídica?:</strong> ${proveedor.personaJuridica ? 'Sí' : 'No'}</p>
                <p><strong>Razón Social:</strong> ${proveedor.nombreRazonSocial || 'N/A'}</p>
                <p><strong>Nombre Comercial:</strong> ${proveedor.nombreComercial || 'N/A'}</p>
                <p><strong>DUI Cliente:</strong> ${proveedor.duiCliente || 'N/A'}</p>
                <p><strong>Representante Legal:</strong> ${proveedor.representanteLegal || 'N/A'}</p>
                <p><strong>DUI Representante:</strong> ${proveedor.duiRepresentanteLegal || 'N/A'}</p>
                <p><strong>Teléfono:</strong> ${proveedor.telefonoCliente || 'N/A'}</p>
                <p><strong>Celular:</strong> ${proveedor.celular || 'N/A'}</p>
                <p><strong>NRC:</strong> ${proveedor.nrc || 'N/A'}</p>
                <p><strong>NIT:</strong> ${proveedor.nitProveedor || 'N/A'}</p>
            `;

            // Insertar el contenido en el modal
            $('#contenidoDetalleProveedor').html(contenido);

            // Mostrar el modal
            $('#modalDetalleProveedor').modal('show');
        } else {
            alert('Proveedor no encontrado.');
        }
    }

    function editarProveedor(id) {
        const proveedor = listaProveedores.rows().data().toArray().find(p => p.idProveedor == id);

        if (proveedor) {
            if (proveedor.personaJuridica) {
                // Llenar datos en el modal Jurídico
                $('#txtRazonSocialJuridica').val(proveedor.nombreRazonSocial || '');
                $('#txtNombrecomercialJuridica').val(proveedor.nombreComercial || '');
                $('#txtRepresentanteJuridico').val(proveedor.representanteLegal || '');
                $('#txtDuiRepresentateJuridico').val(proveedor.duiRepresentanteLegal || '');
                $('#txtClienteJuridico').val(proveedor.telefonoCliente || '');
                $('#txtCelularJuridico').val(proveedor.celular || '');
                $('#txtNrcJuridico').val(proveedor.nrc || '');
                $('#txtNitJuridico').val(proveedor.nitProveedor || '');
                $('#txtIdProveedor').val(id);
                $('#modalEditarJuridico').modal('show');
            } else {
                // Llenar datos en el modal Natural
                $('#txtNombreNatural').val(proveedor.nombres || '');
                $('#txtApellidosNatural').val(proveedor.apellidos || '');
                $('#txtNombreComercialNatural').val(proveedor.nombreComercial || '');
                $('#txtDuiNatural').val(proveedor.duiCliente || '');
                $('#txtClienteTelNatural').val(proveedor.telefonoCliente || '');
                $('#txtCelularNatural').val(proveedor.celular || '');
                $('#txtNrcNatural').val(proveedor.nrc || '');
                $('#txtNitNatural').val(proveedor.nitProveedor || '');
                $('#txtIdProveedor').val(id);
                $('#modalEditarNatural').modal('show');
            }
        } else {
            alert('Proveedor no encontrado.');
        }
    }

    $('#btnGuardarJuridico').click(function () {
        const proveedor = {
            flag: "update",
            personaJuridica: true,
            nombreRazonSocial: $('#txtRazonSocialJuridica').val(),
            nombreComercial: $('#txtNombrecomercialJuridica').val(),
            representanteLegal: $('#txtRepresentanteJuridico').val(),
            duiRepresentanteLegal: $('#txtDuiRepresentateJuridico').val(),
            telefonoCliente: $('#txtClienteJuridico').val(),
            celular: $('#txtCelularJuridico').val(),
            nrc: $('#txtNrcJuridico').val(),
            nitProveedor: $('#txtNitJuridico').val(),
            idProveedor: $("#txtIdProveedor").val() 
        };
        
        $.ajax({
            url: "/Auxiliares/EditarProveeedores",
            method: "PUT",
            contentType: "application/json",
            data: JSON.stringify([proveedor]),
            success: function (data) {
                console.log(data);
                if (data.success) {
                    listaProveedores.ajax.reload(null, false);
                    $('#modalEditarJuridico').modal('hide');
                    Swal.fire({
                        icon: "success",
                        title: "Proveedor eliminado",
                        text: data.message,
                    });
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Error al registrar",
                        text: data.message,
                    });
                }
            },
            error: function (xhr, status, error) {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: "Ocurrió un error al intentar registrar el proveedor.",
                });
                console.error("Error:", error);
            }
        });
    });

    $('#btnGuardarNatural').click(function () {
        const proveedor = {
            flag: "update",
            personaJuridica: false,
            nombres: $('#txtNombreNatural').val(),
            apellidos: $('#txtApellidosNatural').val(),
            nombreComercial: $('#txtNombreComercialNatural').val(),
            duiCliente: $('#txtDuiNatural').val(),
            telefonoCliente: $('#txtClienteTelNatural').val(),
            celular: $('#txtCelularNatural').val(),
            nrc: $('#txtNrcNatural').val(),
            nitProveedor: $('#txtNitNatural').val(),
            idProveedor: $("#txtIdProveedor").val()
        };

        $.ajax({
            url: "/Auxiliares/EditarProveeedores",
            method: "PUT",
            contentType: "application/json",
            data: JSON.stringify([proveedor]),
            success: function (data) {
                console.log(data);
                if (data.success) {
                    listaProveedores.ajax.reload(null, false);
                    $('#modalEditarNatural').modal('hide');
                    Swal.fire({
                        icon: "success",
                        title: "Proveedor eliminado",
                        text: data.message,
                    });
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Error al registrar",
                        text: data.message,
                    });
                }
            },
            error: function (xhr, status, error) {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: "Ocurrió un error al intentar registrar el proveedor.",
                });
                console.error("Error:", error);
            }
        });
    });

    function eliminarProveedor(id) {
        Swal.fire({
            title: "Deseas eliminar?",
            text: "El dato se eliminara de la base!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Confirmo!"
        }).then((result) => {

            if (result.isConfirmed) {
                const proveedor = {
                    flag: "delete",
                    idProveedor: id
                };
                // Enviar datos al servidor
                $.ajax({
                    url: "/Auxiliares/EliminarProveeedores",
                    method: "DELETE",
                    contentType: "application/json",
                    data: JSON.stringify([proveedor]), 
                    success: function (data) {
                        console.log(data);
                        if (data.success) {
                            listaProveedores.ajax.reload(null, false);
                            Swal.fire({
                                icon: "success",
                                title: "Proveedor eliminado",
                                text: data.message,
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Error al registrar",
                                text: data.message,
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: "Ocurrió un error al intentar registrar el proveedor.",
                        });
                        console.error("Error:", error);
                    }
                });
            }
        });
        
       
    }
</script>